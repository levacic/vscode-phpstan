{
    "name": "vscode-phpstan",
    "displayName": "PHPStan static analysis",
    "description": "PHPStan support in Visual Studio Code",
    "version": "0.1.0",
    "publisher": "Milos Levacic",
    "engines": {
        "vscode": "^1.23.1"
    },
    "categories": [
        "Linters",
        "Formatters",
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "repository": {
        "type": "github",
        "url": "https://github.com/levacic/vscode-phpstan"
    },
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/node": "^7.0.65",
        "@types/tmp": "0.0.33",
        "@types/glob": "^5.0.35",
        "typescript": "^2.8.3",
        "vscode": "^1.1.17"
    },
    "contributes": {
        "configuration": [
            {
                "type": "object",
                "title": "PHPStan configuration",
                "properties": {
                    "phpstan.enabled": {
                        "type": "boolean",
                        "default": true,
                        "description": "Enable PHPStan"
                    },
                    "phpstan.level": {
                        "type": "string",
                        "default": "max",
                        "description": "Sets the strictness level of PHPStan"
                    },
                    "phpstan.path": {
                        "type": "string",
                        "default": null,
                        "description": "Override the path to PHPStan"
                    },
                    "phpstan.memoryLimit": {
                        "type": "string",
                        "default": "2048M",
                        "description": "Sets the memory limit of PHPStan"
                    },
                    "phpstan.projectFile": {
                        "type": "string",
                        "default": null,
                        "description": "Sets the project file for phpstan"
                    },
                    "phpstan.options": {
                        "type": "array",
                        "default": [],
                        "description": "Extra commandline options to be passed to PHPStan"
                    },
                    "phpstan.excludeFiles": {
                        "type": "array",
                        "default": [],
                        "description": "Exclude these file from analysis"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "extension.scanForErrors",
                "title": "PHPStan: Scan for Errors"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "extension.scanForErrors"
                }
            ]
        }
    },
    "dependencies": {
        "glob": "^7.1.2",
        "tmp": "0.0.33"
    }
}
